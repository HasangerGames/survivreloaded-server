{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "reference"
  ]
}