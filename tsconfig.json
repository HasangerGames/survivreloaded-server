{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "reference"
    ]    
}
